<!-- app/views/admin/dashboard/index.html.erb -->
<div class="min-h-screen bg-gray-100">

  <%= render 'admin/navigation' %>

  <!-- Main content -->
  <main class="py-10">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="px-4 py-6 sm:px-0">
        <!-- Dashboard overview -->
        <div class="border-4 border-dashed border-gray-200 rounded-lg h-96">
          <h2 class="text-xl font-semibold leading-tight text-gray-800">Admin Dashboard</h2>
          <!-- Dashboard content goes here -->
          <!-- Management entry points -->
          <div class="mt-8 grid grid-cols-2 gap-4">
            <!-- Categories Management -->
            <div class="text-center p-4 shadow-lg rounded-lg hover:bg-gray-50">
              <%= link_to admin_categories_path do %>
                <%= image_tag('logo.png', alt: 'Categories', class: "mx-auto h-12 w-12") %>
                <h3 class="mt-2 text-gray-700 text-sm font-semibold">Categories</h3>
              <% end %>
            </div>

            <!-- Products Management -->
            <div class="text-center p-4 shadow-lg rounded-lg hover:bg-gray-50">
              <%= link_to admin_products_path do %>
                <%= image_tag('logo.png', alt: 'Products', class: "mx-auto h-12 w-12") %>
                <h3 class="mt-2 text-gray-700 text-sm font-semibold">Products</h3>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</div>
